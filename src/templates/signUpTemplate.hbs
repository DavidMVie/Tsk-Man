<section class="form-card">
  <div class="form-tabs">
    <p class="create-account-tab selected" id="signUpLink">Sign Up</p>
    <p class="signin-tab" id="signInLink">Sign In</p>
  </div>
  <div class="form-body">
    <h1>Create Account</h1>
    <ul class="errors-list"></ul>
    <form class="signup-form">
      <div class="form-type-wrapper signup-wrapper">
        <div class="input-wrapper">
          <div>
            <label for="username">Username</label>
          </div>
          <div>
            <input type="text" id="username" name="username" required>
          </div>
        </div>
        <div class="input-wrapper">
          <div>
            <label for="email">Email</label>
          </div>
          <div>
            <input type="email" id="email" name="email" required>
          </div>
        </div>
        <div class="input-wrapper">
          <div>
            <label for="password">Password</label>
          </div>
          <div>
            <input type="password" id="password" name="password" required>
          </div>
        </div>
        <div class="input-wrapper">
          <div>
            <label for="confirmPassword">Password</label>
          </div>
          <div>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Re-Confirm Password" required>
          </div>
        </div>
        <div class="input-wrapper">
          <button class="btn-yell" type="submit">Join</button>
        </div>  
      </div>
    </form>
  </div>
</section>
      
      
      
      
      
      
      
